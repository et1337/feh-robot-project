void ToWall(int checkedTwice)
{
    driveStraight(ticks(3.0), BACKWARD);
    GPSTurn(50, RIGHT);
    GPSTurnTo(6);
    if (checkedTwice)
      FollowHeading(ticks(1.0), BACKWARD, 6);
    GPSTurnTo(2);
    driveT(100, -100, 50L);
    implement(IMPLEMENT_DOWN);
    msleep(750L);
    //if (checkedTwice) FollowHeading(ticks(1.0), FORWARD, 6);
    //FollowHeading(ticks(3.0), FORWARD, 6);
    if (checkedTwice)
      driveT(100, 100, 2000L);
    else
      driveT(100, 100, 3000L);
}

