void Go(int dir)
{
    motor(l_motor, dir*L_MOTOR_SPEED);
    motor(r_motor, dir*R_MOTOR_SPEED);
}
void Stop()
{
    motor(l_motor, 0);
    motor(r_motor, 0);
}
void Turn(int dir)
{
    if (dir == LEFT) {
        motor(l_motor, -L_MOTOR_TURN_SPEED);
        motor(r_motor, R_MOTOR_TURN_SPEED);
    } else {
        motor(l_motor, L_MOTOR_TURN_SPEED);
        motor(r_motor, -R_MOTOR_TURN_SPEED);
    }
}
